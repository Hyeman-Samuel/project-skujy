<div class="row">
                            <div class="col-md-12">
                                <div class="main-card mb-3 card">
                                    <div class="card-header">Candidates
                                    </div>
                                    <div class="table-responsive">
                                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                                            <thead>
                                            <tr>
                                                <th class="text-center">#</th>
                                                <th>Email</th>
                                                <th class="text-center">Score</th>
                                                <th class="text-center">Submitted</th>
                                                <th class="text-center">Exam Number</th>
                                                <th class="text-center">Full Number</th>
                                                {{!-- <th class="text-center">Actions</th> --}}
                                            </tr>
                                            </thead>
                                    <tbody>
                                        {{#each competition.Competition.Registrations as |item i| }}
                                            <tr>
                                                <td class="text-center text-muted">#{{index i }}</td>
                                                <td>
                                                    <div class="widget-content p-0">
                                                        <div class="widget-content-wrapper">
                                                        {{item.Email}}
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    {{#if item.Attempt.Score}}
                                                        {{item.Attempt.Score}}
                                                    {{else}}
                                                    Not Attempted
                                                    {{/if}}
                                                    </td>
                                                <td class="text-center">
                                                    {{#if item.Attempt.HasSubmitted}}
                                                    <div class="badge badge-success">Submitted</div>
                                                    {{else}}
                                                    <div class="badge badge-warning">Not Submitted</div>
                                                    {{/if}}
                                                </td>
                                                <td class="text-center">
                                                    {{item.ExamNumber}}
                                                    </td>
                                                <td class="text-center">
                                                    {{item.FullName}}
                                                    </td>
                                            </tr>
                                            {{/each}}
                                    </tbody>
                                        </table>
                                    </div>
