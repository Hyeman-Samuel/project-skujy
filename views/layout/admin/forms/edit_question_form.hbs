<div class="row">
<a href="/course/{{data.CourseId}}"><button  type="button" class="btn btn-danger" aria-label="Left Align">
 <span class="glyphicon">&#xe257;</span> Back
</button>
</a>
 </div>

 <hr>
  {{#if errors }}
              {{# each errors }}
                <p class="alert alert-danger" style="color: black;">{{ this.msg }}</p>
              {{/each}}
{{/if}}
<form class="form-horizontal" id="form" method="POST" action="/course/{{data.CourseId}}/question/{{data.Question._id}}/edit">
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Question:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" value="{{data.Question.Title}}" name="Title" id="email" placeholder="Enter Question">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Options:</label>

   {{#each data.Question.Options as |option i|}}    
   <div class="col-sm-10">
    <div class="col-sm-8">
      <input type="text" class="form-control" value="{{option.Title}}" name="Options[{{i}}][Title]" id="pwd" placeholder="Enter Option">
   </div>
   {{#if option.IsCorrect}}
    <input type="checkbox" class=" option"  name="Options[{{i}}][IsCorrect]" value="true" checked="true">
    {{else}}
      <input type="checkbox" class=" option"  name="Options[{{i}}][IsCorrect]" value="true">
    {{/if}}
      </div>
    {{/each}}
 </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </div>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
$(".option").change(function() {
    $(".option").prop('checked', false);
    $(this).prop('checked', true);
});


$(".option").change(function() {
    $(".option").not(this).prop('checked', false);
});

</script>